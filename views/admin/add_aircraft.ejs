<form action="/admin/add_aircraft" method="POST">

    <div class="form-group row mt-5">
        <label for="modelName" class="col-sm-2 col-form-label">Model Name</label>
        <div class="col-sm-10">
            <input type="text" name="ModelName" class="form-control" id="modelName" required>
        </div>
    </div>

    <div class="form-group row mt-4">
        <label for="seatingCapacity" class="col-sm-2 col-form-label">Seating Capacity</label>
        <div class="col-sm-10 row">
            <!-- <input type="number" name="SeatingCapacity" class="form-control" id="seatingCapacity" required> -->
            <div class="col-4">
                <h5>Economy</h5>
                <label for="eco_numRows">Number of Rows</label>
                <input type="number" name="eco_numRows" class="form-control" id="eco_numRows" required>
                <label for="eco_numCols">Number of Columns</label>
                <input type="number" name="eco_numCols" class="form-control" id="eco_numCols" required>
            </div>
            <div class="col-4">
                <h5>Business</h5>
                <label for="busi_numRows">Number of Rows</label>
                <input type="number" name="busi_numRows" class="form-control" id="busi_numRows" required>
                <label for="busi_numCols">Number of Columns</label>
                <input type="number" name="busi_numCols" class="form-control" id="busi_numCols" required>
            </div>
            <div class="col-4">
                <h5>Platinum</h5>
                <label for="plat_numRows">Number of Rows</label>
                <input type="number" name="plat_numRows" class="form-control" id="plat_numRows" required>
                <label for="plat_numCols">Number of Columns</label>
                <input type="number" name="plat_numCols" class="form-control" id="plat_numCols" required>
            </div>
        </div>
    </div>

    <div class="form-group row mt-4">
        <label for="noOfAircrafts" class="col-sm-2 col-form-label">No of Aircrafts</label>
        <div class="col-sm-10">
            <input onchange="addFields()" type="number" name="NoOfAircrafts" class="form-control" id="noOfAircrafts" required>
        </div>
    </div>

    <div class="form-group row" id="aircraftIDs">

    </div>

    <button type="submit" class="link link-btn btn btn-outline-primary btn-lg btn-block">Add</button>
</form>

<script>
    function addFields() {
        const no_aircrafts = document.getElementById("noOfAircrafts").value;
        const aircraft_ids = document.getElementById("aircraftIDs");
        let input_fields = ''
        for(let i = 0; i < no_aircrafts; i++) {
            let num = i +1;
            input_fields += '<div class="col-4"><label>AircraftID'+ num +'</label><input type="text" name="id'+ i +'"></div>'
        }
        aircraft_ids.innerHTML = input_fields;
    }
</script>