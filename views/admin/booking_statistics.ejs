<form action="/admin/booking_statistics" method="POST">

    <div class="form-group row">
        <label for="FromDate" class="col-sm-2 col-form-label">From </label>
        <div class="col-sm-10">
            <input type="date" class="form-control" name="FromDate" id="FromDate">
        </div>
    </div>

    <div class="form-group row">
        <label for="ToDate" class="col-sm-2 col-form-label">To </label>
        <div class="col-sm-10">
            <input type="date" class="form-control" name="ToDate" id="ToDate">
        </div>
    </div>

    <button type="submit" class="mt-5 link link-btn btn btn-outline-primary btn-lg btn-block">Generate</button>
    

    <% if(typeof FromDate != 'undefined' && ToDate != undefined) { %>
        
        <div class="mt-5">
            <div class="row">
                <h3 class="col-4">From Date:</h3>
                <h4 class="col-8"><%= FromDate %></h4>
            </div>

            <div class="row">
                <h3 class="col-4">To Date:</h3>
                <h4 class="col-8"><%= ToDate %></h4>
            </div>

            <div class="row">
                <h3 class="col-4">Number Adults:</h3>
                <% if(booking_statistics[1] == 0 || booking_statistics[1] == undefined) { %>
                    <h4 class="col-8">No Adult Passengers</h4>
                <% } else {%> 
                    <h4 class="col-8"><%= booking_statistics[1] %> </h4>
                <% } %> 
            </div>

            <div class="row">
                <h3 class="col-4">Number Children:</h3>
                <% if(booking_statistics[2] == 0 || booking_statistics[2] == undefined) { %>
                    <h4 class="col-8">No Child Passengers</h4>
                <% } else {%> 
                    <h4 class="col-8"><%= booking_statistics[2] %> </h4>
                <% } %> 
            </div>
        </div>

    <% } %> 
</form>