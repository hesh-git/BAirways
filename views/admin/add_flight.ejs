<form action="/admin/add_flight" method="POST">

    <!-- <div class="form-group row">
        <label for="" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="" id="">
        </div>
    </div> -->

    <% if(error != '') { %>
        <div
          class="alert alert-warning alert-dismissible fade show"
          role="alert"
        >
          <%= error %>
          <button
            type="button"
            class="close"
            data-dismiss="alert"
            aria-label="Close"
          >
            <span aria-hidden="true">×</span>
          </button>
        </div>
    <% } %>

    <% if(success != '') { %>
        <div
          class="alert alert-success alert-dismissible fade show"
          role="alert"
        >
          <%= success %>
          <button
            type="button"
            class="close"
            data-dismiss="alert"
            aria-label="Close"
          >
            <span aria-hidden="true">×</span>
          </button>
        </div>
    <% } %>

    <div class="form-group row mt-5">
        <label for="FlightNo" class="col-sm-2 col-form-label">Flight Number</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="FlightNo" id="FlightNo" required>
        </div>
    </div>

    <div class="form-group row mt-4">
        <label for="Origin" class="col-sm-2 col-form-label">Origin</label>
        <div class="col-sm-10">
            <!-- <input type="text" class="form-control" name="" id=""> -->
            <select name="Origin" id="Origin" class="btn btn-secondary btn-block">
                <% for(let i=0; i < airportCodes.length; i++) { %> 
                    <option><%= airportCodes[i] %> </option>
                <% } %> 
            </select>
        </div>
    </div>

    <div class="form-group row mt-4 mb-5">
        <label for="Destination" class="col-sm-2 col-form-label">Destination</label>
        <div class="col-sm-10">
            <!-- <input type="text" class="form-control" name="" id=""> -->
            <select name="Destination" id="Destination" class="btn btn-secondary btn-block">
                <% for(let i=0; i < airportCodes.length; i++) { %> 
                    <option><%= airportCodes[i] %> </option>
                <% } %> 
            </select>
        </div>
    </div>

    <button type="submit" class="link link-btn btn btn-primary btn-lg btn-block">Add</button>
</form>