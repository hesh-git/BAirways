
  <body class="py-5">
    <div class="container rounded shadow-sm">
      <h2 class="title text-center py-3">Book Your Flight</h2>
      <form action="/searchFlight" method="POST">

        <div class="row">
          <div class="col-md-6 col-12 mb-4">
            <div class="form-control d-flex flex-column mb-3">
              <p class="h-blue">FLYING FROM</p>
              <!-- <select
                class="inputbox"
                placeholder="City or Airport"
                name="Ffrom"
                id="Ffrom"
                type="text"
              > -->
              <select 
                name="Ffrom"
                id="Ffrom" 
                class="mb-5"
                >
                <% for(let i=0; i < airportNames.length; i++) { %> 
                    <option value="<%= airportCodes[i] %>"><%= airportNames[i] %></option>
                <% } %> 
            </select>
            </div>
          </div>
          <div class="col-md-6 col-12 mb-4">
            <div class="form-control d-flex flex-column mb-3">
              <p class="h-blue">FLYING TO</p>
              <!-- <input
                class="inputbox"
                placeholder="City or Airport"
                type="text"
                name="Fto"
                id="Fto"
              /> -->
              <select 
              name="Fto"
              id="Fto" 
              class="mb-5"
              >
              <% for(let i=0; i < airportNames.length; i++) { %> 
                  <option value="<%= airportCodes[i] %>"><%= airportNames[i] %></option>
              <% } %> 
          </select>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6 col-12 mb-4">
            <div class="form-control d-flex flex-column mb-3">
              <p class="h-blue">DEPARTING</p>
              <input class="inputbox textmuted mb-5" type="date" name="departing" id="departing" />
                
              </select>
              <!-- <input class="inputbox textmuted" type="date" name="departing" id="departing"/> -->
            </div>
          </div>
          <div class="col-md-6 col-12 mb-4">
            <div class="form-control d-flex flex-column mb-3">
              <p class="h-blue">RETURNING</p>
              <input class="inputbox textmuted mb-5" type="date" name="returning" id="returning" />
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4 mb-4">
            <div class="form-control d-flex flex-column mb-3">
              <p class="h-blue">ADULTS(18+)</p>
              <select class="border-0 outline-none mb-5" name="adults">
                <option value="" hidden selected>0</option>
                <option value=1>1</option>
                <option value=2>2</option>
                <option value=3>3</option>
              </select>
            </div>
          </div>
          <div class="col-md-4 mb-4">
            <div class="form-control d-flex flex-column mb-3">
              <p class="h-blue">CHILDREN(0-17)</p>
              <select class="border-0 outline-none mb-5" name="children">
                <option value="" hidden selected>0</option>
                <option value=1>1</option>
                <option value=2>2</option>
                <option value=3>3</option>
              </select>
            </div>
          </div>
          <div class="col-md-4 mb-4">
            <div class="form-control d-flex flex-column mb-3">
              <p class="h-blue">TRAVEL CLASS</p>
              <select class="border-0 outline-none" name="travelClass">
                <% for(let i=0; i < travelClasses.length; i++) { %> 
                  <option value="<%= travelClasses[i].ID %>"><%= travelClasses[i].Name %> </option>
              <% } %> 
              </select>


            </div>
          </div>
        </div>
        <button class="btn btn-primary form-control text-center">
          Search Now
        </button>
      </form>
    </div>
    <script
      type="text/javascript"
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
    ></script>
    <script type="text/javascript" src=""></script>
    <script type="text/javascript" src=""></script>
    <script type="text/Javascript"></script>
  </body>
