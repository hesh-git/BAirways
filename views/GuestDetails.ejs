<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head.ejs") %>

  <body>
      <div class="content">
  
        <div class="container">
          <div class="row align-items-stretch no-gutters contact-wrap">
            <div class="col-md-12">

              <div class="form h-100">
                
                <form class="mb-5" action="/passengerDetails" method="post" id="contactForm" name="contactForm">
                  <div class="passenger-forms" id="adult-passengers">
                    <% for(let i=0; i < no_adults; i++) { %>
                      <div class="pas-det">
                        <h3>Adult <%= i+1 %> </h3>
                        <div class="row">
                          <div class="col-md-6 form-group mb-3">
                            <label for="Gender" class="col-form-label">Gender</label>
                            <select class="custom-select" id="Gender" name="GenderP<%= i %>">
                              <option selected>Choose...</option>
                              <option value="Male">Male</option>
                              <option value="Female">Female</option>
                            </select>
                          </div>
          
                          <div class="col-md-6 form-group mb-3">
                            <label for="" class="col-form-label">Date of Birth</label>
                            <input type="date" class="form-control" name="DateOfBirthP<%= i %>" id="DateOfBirth" required>
                          </div>
          
                        </div>
          
                        <div class="row">
                          <div class="col-sm-6 form-group mb-3">
                            <label for="" class="col-form-label">First Name</label>
                            <input type="text" class="form-control" name="FirstNameP<%= i %>" id="FirstName" required>
                          </div>
                          <div class="col-sm-6 form-group mb-3">
                            <label for="" class="col-form-label">Last Name</label>
                            <input type="text" class="form-control" name="LastNameP<%= i %>" id="LastName"  required>
                          </div>
                        </div>                   
                      </div>

                    <% } %>
                  </div>

                  <div class="passenger-forms" id="child-passengers">
                    <% for(let i=0; i < no_children; i++) { %>
                      <div class="pas-det">
                        <h3>Child <%= i+1 %> </h3>
                        <div class="row">
                          <div class="col-md-6 form-group mb-3">
                            <label for="Gender" class="col-form-label">Gender</label>
                            <select class="custom-select" id="Gender" name="GenderC<%= i %>">
                              <option selected>Choose...</option>
                              <option value="Male">Male</option>
                              <option value="Female">Female</option>
                            </select>
                          </div>
          
                          <div class="col-md-6 form-group mb-3">
                            <label for="" class="col-form-label">Date of Birth</label>
                            <input type="date" class="form-control" name="DateOfBirthC<%= i %>" id="DateOfBirth" required>
                          </div>
                        </div>

                        <div class="row">
                          <div class="col-sm-6 form-group mb-3">
                            <label for="" class="col-form-label">First Name</label>
                            <input type="text" class="form-control" name="FirstNameC<%= i %>" id="FirstName" required>
                          </div>
                          <div class="col-sm-6 form-group mb-3">
                            <label for="" class="col-form-label">Last Name</label>
                            <input type="text" class="form-control" name="LastNameC<%= i %>" id="LastName"  required>
                          </div>
                        </div>
                      </div>
                    <% } %>
                  </div>
                  
                  <div>
                      
                  </div>

                  <div class="row">
                    <div class="col-md-12 form-group">
                      <Button type="submit" class="btn btn-primary py-2 px-4"> Submit </Button>
                    </div>
                  </div>  
                  
                            
                </form>
  
    
              </div>
            </div>
          </div>
        </div>
      
      </div>

      <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
    

</html>
